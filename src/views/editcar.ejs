<%- include('partials/header'); -%>

    <div class="container">
        <div class="row">
            <!--FORM-->
            <div class="col-md-5 offset-md-3">
                <div class="card">
                    <div class="card-body ">
                        <form action="/editcar/<%= car._id %>" method="post">
                            <div class="form-group">
                                <input class="form-control" type="text" name="platenumber"
                                    placeholder="Agregue una placa" value="<%= car.platenumber %>">
                            </div>

                            <div class="form-group">
                                <input class="form-control" type="text" name="brand" placeholder="Ingrese una marca"
                                    value="<%= car.brand %>">
                            </div>

                            <button class="btn btn-primary" type="submit">
                                Actualizar
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include ('partials/footer'); -%>